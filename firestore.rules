
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to get the requesting user's data
    function getRequestingUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || getRequestingUserData().groupId == resource.data.groupId);
      
      // Allow write if:
      // 1. The user is updating their own document.
      // 2. The user is a Group Manager and is updating a user in their own group.
      allow write: if request.auth != null && 
                    (request.auth.uid == userId || 
                      (getRequestingUserData().userType == "Gestor do Grupo" && getRequestingUserData().groupId == resource.data.groupId));
    }

    match /groups/{groupId} {
      allow read: if request.auth != null && getRequestingUserData().groupId == groupId;
      allow write: if request.auth != null && getRequestingUserData().groupId == groupId && getRequestingUserData().userType == "Gestor do Grupo";
      
      match /games/{gameId}/attendees/{attendeeId} {
        allow read: if request.auth != null && getRequestingUserData().groupId == groupId;
        allow write: if request.auth != null && request.auth.uid == attendeeId;
      }
    }
  }
}
