
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/update their own profile, create one, and delete their own.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Authenticated users can read group info.
    // Only managers can create, update, or delete their own group.
    match /groups/{groupId} {
      allow read: if request.auth.uid != null;
      allow create, delete: if request.auth.uid == groupId;
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'Gestor do Grupo' && request.auth.uid == resource.data.managerId;
      
      // Rules for the 'attendees' subcollection of a game
      match /games/{gameId}/attendees/{userId} {
        // Allow reads if the requesting user is part of the group.
        allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.groupId == groupId;
        
        // Allow a user to create or update their OWN attendance record,
        // but ONLY if they are a member of the group.
        allow create, update: if request.auth.uid == userId && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.groupId == groupId;
      }
    }
  }
}
